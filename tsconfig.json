{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,

      "noEmit": true,
      "verbatimModuleSyntax": true,
      "resolveJsonModule": true
    },
    "include": ["src", "demo"],
    "exclude": ["dist", "node_modules"]
  }
  